<h1>Shuffle Cards Demo</h1>

<div class="link">
  <p><%= link_to 'Shuffle cards', q: 'shuffle' %></p>
</div>

<div class="link">
  <p><%= link_to 'Reset cards' %></p>
</div>

<% @deck.cards.each_slice(13) do |cards| %>
    <div class="hand">
      <%= render partial: 'card', collection: cards %>
    </div>
<% end %>
